{
  "name": "aglit-repo",
  "private": true,
  "packageManager": "bun@1.3.6",
  "type": "module",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "turbo run build",
    "dev": "bun packages/cli/src/index.ts",
    "start": "bun packages/cli/src/index.ts",
    "publish:dry": "turbo run publish:dry --concurrency 1 --filter aglit --filter '@jmmarotta/aglit-sdk' --filter '@jmmarotta/opencode-aglit'",
    "publish": "turbo run publish:run --concurrency 1 --filter aglit --filter '@jmmarotta/aglit-sdk' --filter '@jmmarotta/opencode-aglit'",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "fmt": "turbo run fmt",
    "fmt:check": "turbo run fmt:check",
    "test": "turbo run test",
    "postinstall": "if [ -d .git ]; then lefthook install; fi"
  },
  "devDependencies": {
    "@jmmarotta/aglit-sdk": "workspace:*",
    "@opencode-ai/plugin": "^1",
    "@tsconfig/bun": "latest",
    "@typescript/native-preview": "latest",
    "@types/bun": "latest",
    "lefthook": "^1.7.8",
    "oxfmt": "latest",
    "oxlint": "latest",
    "turbo": "latest"
  }
}
